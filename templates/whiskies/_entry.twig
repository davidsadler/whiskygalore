{% extends "layouts/_site" %}

{% block body %}
    <h1>{{ entry.title }}</h1>

    {% for image in entry.image.all() %}
        <img src="{{ image.getUrl() }}" height="480">
    {% endfor %}

    {% for block in entry.description.all() %}
        {% if block.type == "heading" %}
            <h3>{{ block.heading }}</h3>
        {% elseif block.type == "text" %}
            {{ block.text|markdown }}
        {% elseif block.type == "image" %}
            {% for image in block.image.all() %}
                <img src="{{ image.getUrl() }}" height="480">
            {% endfor %}
        {% endif %}
    {% endfor %}
{% endblock %}
